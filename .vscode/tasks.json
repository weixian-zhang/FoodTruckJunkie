{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run Portal",
            "type": "shell",
            "command": "npm run start",
            "options": {
                "cwd": "${workspaceFolder}/src/FoodTruckJunkie.Portal",
                "env": {
                    "REACT_APP_ENV": "local"
                }
            }
        },
        {
            "label": "build Api Server",
            "type": "shell",
            "command": "dotnet build",
            "options": {
                "cwd": "${workspaceFolder}/src/FoodTruckJunkie.ApiServer"
            }
        }
    ]
}